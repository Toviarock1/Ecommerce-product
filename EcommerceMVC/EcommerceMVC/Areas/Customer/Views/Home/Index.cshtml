@model IEnumerable<EcommerceMVC.Data.Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row pb-3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius:5px;">
                    <div class="card">
                        <img src="@product.ImageUrl" class="card-img-top rounded" width="400" height="290" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>


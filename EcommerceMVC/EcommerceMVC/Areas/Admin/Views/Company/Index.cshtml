@{
	ViewData["Title"] = "Company";
}

<div class="category-table">
	<div class="card shadow border-0 mb-7">
		<div class="row align-items-center p-3 m-2">
			<div class="col-12 mb-4 mb-sm-0 d-flex justify-content-between">
				<div class="col-6 text-start">
					<h1 class="text-primary">Company List</h1>
				</div>
				<div class="col-6 text-end">
					<a type="button" class="btn btn-primary" asp-controller="Company" asp-action="Upsert">
						<i class="bi bi-plus-circle"></i>&nbsp; Create New Company
					</a>
				</div>
			</div>
		</div>
	</div>
</div>

<table id="tblData" class="table table-bordered table-striped" style="width:100%">
	<thead class="thead-light">
		<tr>
			<th scope="col">
				 Name
			</th scope="col">
			<th scope="col">
				 Address
			</th scope="col">
			<th scope="col">
				 City
			</th scope="col">
			<th scope="col">
				 State
			</th scope="col">
			<th scope="col">
				 Phone Number
			</th scope="col">
			<th>

			</th>
		</tr>
	</thead>

</table>
<script src="~/js/company.js" type="text/javascript"></script>
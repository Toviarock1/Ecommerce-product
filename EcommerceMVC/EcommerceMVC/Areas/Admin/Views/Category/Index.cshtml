@using EcommerceMVC.Data;
@model IEnumerable<Category>
@{
	ViewData["Title"] = "Category";
}

<div class="category-table">
	<div class="card shadow border-0 mb-7">
		<div class="row align-items-center p-3 m-2">
			<div class="col-12 mb-4 mb-sm-0 d-flex justify-content-between">
				<div class="col-6 text-start">
					<h1 class="text-primary">Category List</h1>
				</div>
				<div class="col-6 text-end">
					<a type="button" class="btn btn-primary" asp-controller="Category" asp-action="Create">
						<i class="bi bi-plus-circle"></i>&nbsp; Create New Category
					</a>
				</div>
			</div>
		</div>
	</div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
	<thead class="thead-light">
		<tr>
			<th scope="col">
				Id
			</th>
			<th scope="col">
				Category Name
			</th scope="col">
			<th scope="col">
				Display Order
			</th>
			<th>

			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (Category obj in Model)
		{
			<tr>
				<td with=5%>
					@obj.Id
				</td>
				<td with=5%>
					@obj.Name
				</td>
				<td with=5%>
					@obj.DisplayOrder
				</td>
				<td>
				<a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary"><i class="bi bi-pen"></i>&nbsp;Edit</a>
				<a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger"><i class="bi bi-trash3-fill"></i>&nbsp;Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>